<div id="accordion">
  <% @open_goals.each do |goal| %>
  <h3>
    <tr>
      <td><strong><%= goal.title %></strong></td>
      <td>Reward: <%= goal.reward %></td>
      <td>Due: <%= goal.due %></td>
    </tr>
  </h3>
  <div>
    <table class="table table">
      <tr>
        <th>Reward</th>
        <th>Reward cost</th>
        <th>Created</th>
        <th>Due</th>
        <th>Completed date time</th>
        <th>Completed</th>
        <th colspan="3"></th>
      </tr>
      <tr>
        <td><%= goal.reward %></td>
        <td>$<%= goal.reward_cost %></td>
        <td><%= goal.created_at.strftime("%b %d, %Y") %></td>
        <td><%= goal.due %></td>
        <td><%= goal.completed_date_time %></td>
        <td><%= goal.completed %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure you with to abandon your goal and have your deposit refunded?' } %></td>
      </tr>
    </table>
  </div>
  <% end %>
</div>

<script>
  $(function() {
    $( "#accordion" ).accordion();
  });
</script>