<div class="text-center">
  <%= simple_form_for(@goal) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs goal-create-forms">
      <%= f.input :title, placeholder: 'Give your goal a name!' %>
      <%= f.input :reward, placeholder: 'Reward name'%>
      <%= f.input :reward_link, placeholder: 'Paste reward link'%>
      <%= f.input :item_details, placeholder: 'Enter any details eg size, color etc' %>
      <%= f.input :reward_cost, placeholder: 'Cost + shipping' %>
      <%= f.input :image, placeholder: 'Enter an image URL to show for your goal' %>
      <label><span>Due date</span></label>
      <%= f.date_field :due %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Next", class: "btn" %>
    </div>
  <% end %>
</div>