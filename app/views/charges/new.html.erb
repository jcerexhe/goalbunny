<div class="col-md-4 col-xs-6"></div>
<div class="col-md-4 col-xs-6 section">
<%= form_tag charges_path(amount: @goal.reward_cost/100, goal_id: @goal.id) do %>
  <article>
    <h3>Goal: <%= @goal.title %></h3>
    <p>Reward Path: <%= @goal.reward %></p>
    <p>Amount: <%= number_to_currency(@goal.reward_cost/100) %></p> <br>

  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Payment for <%= @goal.title %>"
          data-email="<%= current_user.email %>"
          data-amount="<%= @goal.reward_cost %>"></script>
<% end %>
</div>